{
  "info": {
    "name": "Agenda API",
    "_postman_id": "e2b3c9f7-1234-4567-8901-abcdef123456",
    "description": "Coleção para testar a Agenda API com POST, GET, GET by ID, PUT e DELETE",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Criar Contato (POST)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"Luis Gabriel\",\n  \"telefone\": \"11999999999\",\n  \"email\": \"luis@email.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/contatos",
          "host": ["{{baseUrl}}"],
          "path": ["contatos"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let jsonData = pm.response.json();",
              "pm.environment.set(\"contatoId\", jsonData.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Listar Contatos (GET)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/contatos",
          "host": ["{{baseUrl}}"],
          "path": ["contatos"]
        }
      },
      "response": []
    },
    {
      "name": "Buscar Contato por ID (GET)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/contatos/{{contatoId}}",
          "host": ["{{baseUrl}}"],
          "path": ["contatos", "{{contatoId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Atualizar Contato (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"Luis Atualizado\",\n  \"telefone\": \"11988888888\",\n  \"email\": \"luis.novo@email.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/contatos/{{contatoId}}",
          "host": ["{{baseUrl}}"],
          "path": ["contatos", "{{contatoId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Remover Contato (DELETE)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/contatos/{{contatoId}}",
          "host": ["{{baseUrl}}"],
          "path": ["contatos", "{{contatoId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "contatoId", "value": "" }
  ]
}
